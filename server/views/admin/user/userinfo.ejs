<div class="container-fluid" style="margin: 120px auto;padding: 20px 15px; border: 1px solid grey;border-radius: 5px">
    <div class="row-fluid">
        <div class="span6 offset3">
            <form class="form-horizontal" name="register" action="/user/signup" method="post">
                <div class="control-group">
                    <label class="control-label" for="username">username</label>

                    <div class="controls">
                        <input type="text" id="user_login" name="user_login" placeholder="username" value="<%=request.user.user_login%>">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="user_email">email</label>

                    <div class="controls">
                        <input type="text" id="user_email" name="user_email" value="<%=request.user.email%>">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="user_nicename">nicename</label>

                    <div class="controls">
                        <input type="text" id="user_nicename" name="user_nicename" value="<%=request.user.user_nicename%>">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="display_name">displayname</label>

                    <div class="controls">
                        <input type="text" id="display_name" name="display_name" value="<%=request.user.display_name%>">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="user_url">url</label>

                    <div class="controls">
                        <input type="text" id="user_url" name="user_url" value="<%=request.user.user_url%>">
                    </div>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">submit</button>
                </div>
                <% if (locals.error){ %>
                <div class="text-center"><%= error %></div>
                <% } %>
            </form>
        </div>
    </div>
</div>