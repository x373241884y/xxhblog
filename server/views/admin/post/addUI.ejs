<div>
    <h3>撰写新文章</h3>
    <script type="text/javascript">
        function post_new() {
            console.log($("#post_content").val());
            return true;
        }
    </script>
    <div class="post">
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <form class="form-horizontal" name="post-new" action="/admin/post_new" method="post"
                          onsubmit="return post_new()">
                        <div class="control-group">
                            <label for="post_title">标题*</label>
                            <input type="text" id="post_title" name="post_title" placeholder="标题">
                        </div>
                        <div class="control-group">
                            <label for="term_id1">分类目录</label>
                            <select name="term_id1">
                                <option value="">无</option>
                                <% request.categoryList.forEach(function(term){ %>
                                <option value="<%= term.term_id %>"><%= term.slug %></option>
                                <% }); %>

                            </select>
                        </div>
                        <div class="control-group">
                            <label for="term_id2">添加标签</label>

                            <select name="term_id2">
                                <option value="">无</option>
                                <% request.tagList.forEach(function(term){ %>
                                <option value="<%= term.term_id %>"><%= term.slug %></option>
                                <% }); %>

                            </select>

                        </div>
                        <div class="control-group">
                            <label for="post_content">内容*</label>

                            <div id="editormd">
                                <textarea id="post_content" name="post_content"></textarea>
                            </div>

                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary" type="submit">submit</button>
                        </div>
                        <% if (session.error){ %>
                        <div class="text-center"><%= error %></div>
                        <% } %>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
